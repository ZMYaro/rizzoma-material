{
	"manifest_version": 2,
	"name": "Material Design for Rizzoma",
	"version": "1.6",
	"description": "A fresh coat of paint for Rizzoma, inspired by Material Design.",
	"icons": {
		"48": "images/icon_48.png",
		"128": "images/icon_128.png"
	},
	
	"permissions": [
		"*://rizzoma.com/drive/*",
		"*://rizzoma.com/topic/*"
	],
	
	"content_scripts": [{
		"matches": [
			"*://rizzoma.com/drive/*",
			"*://rizzoma.com/topic/*"
		],
		"css": [
			"styles/buttons.css",
			"styles/panels.css",
			"styles/popups.css",
			"styles/toolbars.css",
			"styles/wave.css"
		],
		"js": [
			"scripts/labels.js"
		]
	}]
}
